<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">



    <RelativeLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/title_centertextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="龙管家"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_18"/>

    </RelativeLayout>



    <com.aosijia.dragonbutler.ui.widget.pulllistview.PullToRefreshScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e0e0e0"
            android:orientation="vertical">

            <com.aosijia.dragonbutler.ui.widget.Kanner
                android:id="@+id/homeImageKander"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/default_pic_bank_adv">
            </com.aosijia.dragonbutler.ui.widget.Kanner>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="16dp"
                    android:text="物业服务"
                    android:textColor="@color/gray_47"
                    android:textSize="@dimen/text_size_14"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/homeCommunityAnnouncement"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/btn_common_selector"
                            android:background="@drawable/home_community_announcement"
                            android:scaleType="fitXY"/>

                        <ImageView
                            android:id="@+id/homeMaintenanceImage"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="1"
                            android:src="@drawable/btn_common_selector"
                            android:background="@drawable/home_maintenance"
                            android:scaleType="fitXY"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/homePropertyBillImage"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/btn_common_selector"
                            android:background="@drawable/home_property_bill"
                            android:scaleType="fitXY"/>

                        <ImageView
                            android:id="@+id/homeForumImage"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="1"
                            android:background="@drawable/home_forum"
                            android:src="@drawable/btn_common_selector"
                            android:scaleType="fitXY"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@color/white"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="16dp"
                    android:text="金融服务"
                    android:textColor="@color/gray_47"
                    android:textSize="@dimen/text_size_14"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_94"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">




                    <TextView
                        android:id="@+id/homeCardTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/home_card"
                        android:gravity="center"
                        android:background="@drawable/btn_common_selector"
                        android:clickable="true"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp"
                        android:text="信用卡"/>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/gray_94"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"/>

                    <TextView
                        android:id="@+id/homeLoanText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:background="@drawable/btn_common_selector"
                        android:drawableTop="@drawable/home_loan"
                        android:gravity="center"
                        android:paddingBottom="20dp"
                        android:clickable="true"
                        android:paddingTop="20dp"
                        android:text="贷款"/>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/gray_94"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"/>

                    <TextView
                        android:id="@+id/homeEBusinessText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:clickable="true"
                        android:drawableTop="@drawable/home_e_business"
                        android:gravity="center"
                        android:background="@drawable/btn_common_selector"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp"
                        android:text="善融"/>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </com.aosijia.dragonbutler.ui.widget.pulllistview.PullToRefreshScrollView>

</LinearLayout>