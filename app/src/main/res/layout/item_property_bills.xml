<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/propertyBillsTypeImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:src="@drawable/propertyill_global_type" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/propertyBillsTypeImageView"
        android:orientation="vertical">

        <TextView
            android:id="@+id/propertyBillsTitleTextView"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="小区公告标题小区公"
            android:textColor="#474747"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/propertyBillsMoneyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="100元"
            android:textColor="#949494"
            android:textSize="@dimen/text_size_15" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="25dp"
        android:text="缴费"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_18" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="12dp"
        android:layout_below="@+id/propertyBillsTypeImageView"
        android:layout_marginRight="12dp"
        android:background="@color/gray_94" />

</RelativeLayout>