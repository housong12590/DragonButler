<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/communityAnnouncementTypeImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:src="@drawable/communityannouncement_community_type"
        />

    <LinearLayout
        android:layout_toRightOf="@id/communityAnnouncementTypeImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/communityAnnouncementTitleTextView"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_15"
            android:textColor="#474747"
            android:text="小区公告标题小区公"/>
        <TextView
            android:id="@+id/communityAnnouncementDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_15"
            android:textColor="#949494"
            android:layout_marginTop="18dp"
            android:text="2015-15-05   10：00"/>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/common_arrow_right"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_94"
        android:layout_below="@+id/communityAnnouncementTypeImageView"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"/>

</RelativeLayout>