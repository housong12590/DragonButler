<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              style="@style/immersion_status"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorPrimaryDark"
              android:orientation="vertical">

    <include layout="@layout/app_base_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_push"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/layout_bg_selector"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_weight="1"
                android:text="推送设置"
                android:textColor="@color/gray_47"
                android:textSize="@dimen/text_size_14" />

            <com.aosijia.dragonbutler.ui.widget.SwitchButton
                android:id="@+id/iv_push_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:kswAnimationDuration="300"
                app:kswBackDrawable="@drawable/ios_back_drawable"
                app:kswBackMeasureRatio="1.4"
                app:kswThumbDrawable="@drawable/ios_thumb"
                app:kswThumbMarginBottom="-8dp"
                app:kswThumbMarginLeft="-5dp"
                app:kswThumbMarginRight="-5dp"
                app:kswThumbMarginTop="-2.5dp"
                />
        </LinearLayout>

        <View style="@style/divider_style_mp" />

        <LinearLayout
            android:id="@+id/ll_versions"
            android:layout_width="match_parent"
            android:background="@drawable/layout_bg_selector"
            android:layout_height="45dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_weight="1"
                android:text="版本升级"
                android:textColor="@color/gray_47"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_current_versions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="当前版本3.3.0.7666"
                android:textColor="@color/gray_47"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <View style="@style/divider_style_mp" />

        <LinearLayout
            android:id="@+id/ll_opinion"
            android:layout_width="match_parent"
            android:background="@drawable/layout_bg_selector"
            android:layout_height="45dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_weight="1"
                android:text="意见反馈"
                android:textColor="@color/gray_47"
                android:textSize="@dimen/text_size_14" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:src="@drawable/common_arrow_right" />
        </LinearLayout>

        <View style="@style/divider_style_mp" />

        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_width="match_parent"
            android:background="@drawable/layout_bg_selector"
            android:layout_height="45dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_weight="1"
                android:text="分享给好友"
                android:textColor="@color/gray_47"
                android:textSize="@dimen/text_size_14" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:src="@drawable/common_arrow_right" />
        </LinearLayout>

        <View style="@style/divider_style_mp" />

        <LinearLayout
            android:id="@+id/ll_cache"
            android:layout_width="match_parent"
            android:background="@drawable/layout_bg_selector"
            android:layout_height="45dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_weight="1"
                android:text="清除图片缓存"
                android:textColor="@color/gray_47"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_cache_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="556K"
                android:textColor="@color/gray_47"
                android:textSize="@dimen/text_size_14" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:src="@drawable/common_arrow_right" />
        </LinearLayout>

        <View style="@style/divider_style_mp" />

        <LinearLayout
            android:id="@+id/ll_about"
            android:layout_width="match_parent"
            android:background="@drawable/layout_bg_selector"
            android:layout_height="45dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_weight="1"
                android:text="关于我们"
                android:textColor="@color/gray_47"
                android:textSize="@dimen/text_size_14" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:src="@drawable/common_arrow_right" />
        </LinearLayout>

        <View
            style="@style/divider_style_mp"
            android:layout_marginBottom="34dp" />

        <Button
            android:id="@+id/bt_logout"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_margin="13dp"
            android:background="@drawable/bg_join_button_shape"
            android:text="注销当前账号"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>


</LinearLayout>
