<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/immersion_status"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMeTitle"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/content_backgroud"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/me_top_background">

            <RelativeLayout
                android:id="@+id/titleLayout"
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <ImageView
                    android:id="@+id/title_leftimageview"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_common_button_selector"
                    android:paddingLeft="@dimen/title_button_padding"
                    android:paddingRight="@dimen/title_button_padding"
                    android:src="@drawable/btn_back"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/title_centertextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="TA的资料"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_18" />


            </RelativeLayout>

            <com.aosijia.dragonbutler.ui.widget.CircleImageView
                android:id="@+id/avatarImageView"
                android:layout_width="109dp"
                android:layout_height="109dp"
                android:layout_below="@id/titleLayout"
                android:layout_centerInParent="true"
                android:layout_marginBottom="35dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/avatar_default" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/nickNameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_color"
            android:padding="14dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="昵称"
                android:textColor="@color/gray_47"
                android:textSize="@dimen/text_size_14" />


            <ImageView
                android:id="@+id/nick_arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/common_arrow_right"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/nickNameValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="14dp"
                android:layout_toLeftOf="@id/nick_arrow_right"
                android:text="小二郎"
                android:textColor="@color/gray_47"
                android:textSize="@dimen/text_size_14" />
        </RelativeLayout>

        <View style="@style/divider_style_mp" />

        <RelativeLayout
            android:id="@+id/genderLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gray_item_selector"
            android:padding="14dp"
            android:visibility="gone">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="性别"
                android:textColor="@color/gray_47"
                android:textSize="@dimen/text_size_14" />


            <ImageView
                android:id="@+id/gender_arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/common_arrow_right"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/genderValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="14dp"
                android:layout_toLeftOf="@id/gender_arrow_right"
                android:text="男"
                android:textColor="@color/gray_47"
                android:textSize="@dimen/text_size_14" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_94" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="bottom"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray_94" />

            <Button
                android:id="@+id/sendMessageButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:background="@drawable/selected_bg_bt"
                android:text="发私信"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
