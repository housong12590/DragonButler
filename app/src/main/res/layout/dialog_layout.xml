<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_dialog_bg"
    android:minHeight="170dp"
    android:minWidth="315dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textColor="@color/gray_47"
        android:textSize="@dimen/text_size_18" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        android:textColor="@color/gray_47"
        android:textSize="@dimen/text_size_16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="20dp"
        android:background="@color/gray_94" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_positive"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_16"
            android:background="@drawable/dialog_positive_stlector"
            android:textColor="@color/blue_04" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gray_94" />

        <Button
            android:id="@+id/bt_negative"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_size_16"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dialog_negative_selector"
            android:textColor="@color/blue_04" />
    </LinearLayout>
</LinearLayout>
