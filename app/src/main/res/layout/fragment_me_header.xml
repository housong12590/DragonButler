<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/title_centertextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="æˆ‘"
            android:visibility="gone"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_18"/>

        <ImageView
            android:id="@+id/title_rightimageview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_common_button_selector"
            android:paddingLeft="@dimen/title_button_padding"
            android:paddingRight="@dimen/title_button_padding"
            android:src="@drawable/common_setting_button"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/meLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleLayout"
        android:layout_margin="15dp">

        <com.aosijia.dragonbutler.ui.widget.CircleImageView
            android:id="@+id/avatarImageView"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/avatar_default"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/avatarImageView"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"

                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14"
                />

            <TextView
                android:id="@+id/communityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"

                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14"
                />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/common_arrow_white_button"/>

    </RelativeLayout>

</RelativeLayout>

